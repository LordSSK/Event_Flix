    <RelativeLayout tools:context="com.example.leena.mypills.LoginActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--</ScrollView>-->

    <EditText android:layout_height="wrap_content" android:layout_width="247dp" android:inputType="time" android:hint="Timing(24 hr)" android:ems="10" android:layout_below="@+id/renamee" android:layout_alignParentStart="true" android:id="@+id/evetime"/>

    <EditText android:layout_height="wrap_content" android:layout_width="245dp" android:inputType="textPersonName" android:hint="Description" android:ems="10" android:layout_alignParentStart="true" android:id="@+id/evedesc" android:layout_marginTop="204dp" android:layout_alignParentTop="true"/>

    <EditText android:layout_height="wrap_content" android:layout_width="247dp" android:inputType="textPersonName" android:hint="Event Name" android:ems="10" android:id="@+id/evename" android:layout_marginTop="40dp" android:layout_alignParentTop="true"/>

    <ImageButton android:layout_height="115dp" android:layout_width="match_parent" android:layout_alignParentStart="true" android:id="@+id/post_img1" app:srcCompat="@drawable/select_image" android:layout_above="@+id/reg"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView4" android:layout_alignParentTop="true" android:textSize="20sp" android:textColor="@color/colorPrimaryDarker" android:text="Registration" android:layout_centerHorizontal="true"/>

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView4" android:id="@+id/imageView" android:src="@mipmap/ic_launcher1_round" android:layout_marginEnd="31dp" android:layout_alignParentEnd="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/evename" android:id="@+id/renamee" android:text="Profile Name" android:layout_marginEnd="13dp" android:layout_alignParentEnd="true"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/reg" android:text="Register" android:layout_centerHorizontal="true" android:theme="@style/PrimaryButton" android:layout_marginBottom="12dp" android:layout_alignParentBottom="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView10" android:text="Want to add some photos?" android:layout_centerHorizontal="true" android:layout_marginBottom="191dp" android:layout_alignParentBottom="true"/>

    <Button android:layout_height="wrap_content" android:layout_width="111dp" android:id="@+id/addloc" android:layout_marginTop="193dp" android:layout_alignParentTop="true" android:text="Select location" android:layout_alignParentEnd="true" android:textColor="@color/colorAccent"/>

    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_alignParentStart="true" android:id="@+id/spinner" android:layout_marginTop="160dp" android:layout_alignParentTop="true"/>

    <EditText android:layout_height="wrap_content" android:layout_width="244dp" android:inputType="date" android:hint="Date" android:ems="10" android:layout_alignParentStart="true" android:id="@+id/date1" android:layout_marginBottom="249dp" android:layout_alignParentBottom="true"/>

    <EditText
        android:id="@+id/price"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/date1"
        android:ems="10"
        android:hint="Cost"
        android:inputType="numberDecimal" />

</RelativeLayout>